<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="275dp"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="@color/dialogPopupBackgroundColor"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/redtomato"/>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="How It Works"
        android:textColor="#050505"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="1. Customize preferences in \nsettings (not recommended)"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8sp"
        android:text="2. Start the timer and begin work"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8sp"
        android:text="3. Once time is up, enjoy your rest"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8sp"
        android:text="4. This will keep on repeating infinitely"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8sp"
        android:text="5. Use this app towards whatever goal you have. Study timer, workout timer, etc."
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can also view your progress in the statistics tab. One work round is at least 25 minutes of work and one rest round is at most 10 minutes of rest"/>
</LinearLayout>