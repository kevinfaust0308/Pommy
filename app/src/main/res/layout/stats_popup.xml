<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:background="@color/dialogPopupBackgroundColor"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.example.kevin.pomodoro.fragments.StatisticsDialogFragment">

    <TextView
        android:id="@+id/statText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Here are your stats so far:"
        android:textColor="@color/md_black_1000"
        android:textSize="15sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#d7e8ec"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:background="@color/md_purple_50"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/completedWorkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed Work Rounds:"
                android:textColor="#16280a"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/completedRestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Completed Rest Rounds: "
                android:textColor="#16280a"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/openedAppText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Opened app: "
                android:textColor="#16280a"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/md_pink_50"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/completedWorkCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999"
                android:textColor="#16280a"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/completedRestCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="9999"
                android:textColor="#16280a"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/openedAppCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="9999"
                android:textColor="#16280a"
                android:textSize="15sp"
                tools:text="9999"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
